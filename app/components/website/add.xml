<Page navigatingTo="onNavigatingTo" xmlns:actionBar="/actionBar">
    <ActionBar class="actionbar" title="Add a login">
  <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack"></NavigationButton>
</ActionBar>
<ScrollView  orientation="vertical">	
<StackLayout class="login-wrapper" tap="dismissSoftInput">
    <TextField class="add_edit" text="{{siteName}}" hint="Website" />
    <TextField class="add_edit" text="{{siteUser}}" hint="Username/Email" />
    <TextField class="add_edit" text="{{sitePass}}" hint="Password" />
    <Button class="btn btn-secondary-add btn-rounded-lg" text="Save" tap="{{webSite}}" />
    <Label row="2" col="0" text="Go Back" class="go-back" textWrap="true" tap="goBack" /> 
    </StackLayout>
	</ScrollView>
</Page>